# ============================================
# LeafScan AI - Docker Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values

# ===================
# Required API Keys
# ===================

# Gemini AI API Key
# Get yours from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Mapbox Token (for maps)
# Get yours from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Supabase Configuration (for authentication & database)
# Get yours from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===================
# Optional Settings
# ===================

# Node Environment
NODE_ENV=production

# Disable Next.js Telemetry
NEXT_TELEMETRY_DISABLED=1

# Port (default: 3000)
PORT=3000
